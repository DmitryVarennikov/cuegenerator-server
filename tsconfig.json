{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true, 
    "noUnusedLocals": false,
    "outDir": "lib",
    "sourceMap": true,
    "strict": true,
    "target": "ES2022",
    "lib": ["ES2023"],
    "esModuleInterop": true
  },
  "compileOnSave": true,
  "include": ["src"]
}
